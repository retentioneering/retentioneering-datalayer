{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}